{
	"info": {
		"_postman_id": "providers-collection-2025",
		"name": "Providers - Superadmin",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Listar Providers",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{superadmin_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/admin/providers",
					"host": ["{{base_url}}"],
					"path": ["api", "admin", "providers"]
				},
				"description": "Lista todos os providers cadastrados (WAHA, UAZAPI, etc)"
			}
		},
		{
			"name": "Criar Provider",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 201) {",
							"    const response = pm.response.json();",
							"    pm.environment.set('provider_id', response.data.id);",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{superadmin_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"type\": \"waha\",\n  \"name\": \"WAHA Server 01\",\n  \"base_url\": \"http://192.168.11.160:3000\",\n  \"api_key\": \"qVuX8Wmv&ivvm2\",\n  \"max_instances\": 100,\n  \"is_active\": true\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/admin/providers",
					"host": ["{{base_url}}"],
					"path": ["api", "admin", "providers"]
				},
				"description": "Cria um novo provider (servidor WAHA ou UAZAPI)"
			}
		},
		{
			"name": "Buscar Provider",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{superadmin_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/admin/providers/{{provider_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "admin", "providers", "{{provider_id}}"]
				}
			}
		},
		{
			"name": "Atualizar Provider",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{superadmin_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"WAHA Atualizado\",\n  \"max_instances\": 200,\n  \"is_active\": true\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/admin/providers/{{provider_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "admin", "providers", "{{provider_id}}"]
				}
			}
		},
		{
			"name": "Deletar Provider",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{superadmin_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/admin/providers/{{provider_id}}",
					"host": ["{{base_url}}"],
					"path": ["api", "admin", "providers", "{{provider_id}}"]
				}
			}
		},
		{
			"name": "Listar Instâncias do Provider",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{superadmin_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/admin/providers/{{provider_id}}/instances",
					"host": ["{{base_url}}"],
					"path": ["api", "admin", "providers", "{{provider_id}}", "instances"]
				},
				"description": "Lista todas as instâncias de um provider específico"
			}
		}
	]
}

